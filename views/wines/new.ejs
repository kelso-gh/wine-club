<%- include('../partials/header') %>

<th>Add Your Wine:</th>
<form id="add-wine-form" method="POST" action="/bundles/<%= bundleId %>/wines">
    <div class="mb-3">
    <label class="form-label">Name:
        <input class="form-control" type="text" name="name" required>
    </label>
    </div>
    <label>Style:
        <input type="text" name="style" required>
    </label>
    <label>Region:
        <input type="text" name="region" required>
    </label>
    <label>Natural:
        <input type="checkbox" name="natural" checked>
    </label>
    <label>IMG:
        <input type="text" name="img" required>
    </label>
    <input type="submit" value="Add Wine">
</form>

<%- include('../partials/footer') %>
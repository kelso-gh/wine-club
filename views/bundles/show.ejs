<%- include('../partials/header') %>
<section id="bundle-show-page">
    <ul>
    <div>Bundle Name:</div>
    <div><%= bundle.bundle %></div>
    <a href="/bundles/<%= bundle._id %>/wines/new">Add Wine</a>
    <% if (wines.length) { %>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Style</th>
              <th>Region</th>
              <th>Natural</th>
              <th>Image</th>
            </tr>
          </thead>
          <tbody>
            <% wines.forEach(function(w) { %>
              <tr>
                <td><%= w.name %></a> </td>
                <td><%= w.style %></td>
                <td><%= w.region %></td>
                <td><%= w.natural %></td>
                <td><img src=" <%= w.img %> " height="50px"/></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <h5>no wine added</h5>
      <% } %>
      </ul>
</section>

<div id="review-show-page">
<ul>
<form id="add-review-form" method="POST" action="/bundles/<%= bundle._id %>/reviews">
  <label>Review:</label>
<textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<% if (bundle.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% bundle.reviews.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
          <% if (user) { %>
          <td><form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
            <button type="submit">DELETE REVIEW</button>
          </form></td>
      
          <td><a href="/reviews/<%= r._id %>/edit">Edit</a>
          </td>
          <% } %>
        </tr>
      <% }); %>
      <tr>
        <td colspan="2"></td>
        <td>
          <strong>
            <%= (total / bundle.reviews.length).toFixed(1) %>
          </strong>
        </td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>
</ul>
</div>

<%- include('../partials/footer') %>